<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <InteractionDef>
    <defName>Flirt</defName>
    <label>flirt</label>
    <workerClass>Gradual_Romance.InteractionWorker_Flirt</workerClass>
    <symbol>Things/Mote/SpeechSymbols/Romance</symbol>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry->[INITIATOR_nameDef] tried to flirt with [RECIPIENT_nameDef].</li>
      </rulesStrings>
    </logRulesInitiator>
  </InteractionDef>

  <InteractionDef>
    <defName>AskToMoveIn</defName>
    <label>ask to move in</label>
    <workerClass>Gradual_Romance.InteractionWorker_AskToMoveIn</workerClass>
    <symbol>Things/Mote/SpeechSymbols/Romance</symbol>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry->[INITIATOR_nameDef] asked [RECIPIENT_nameDef] to move in with {INITIATOR_objective}.</li>
      </rulesStrings>
    </logRulesInitiator>
  </InteractionDef>
  
  
  
  <RulePackDef>
    <defName>Sentence_FlirtAttemptAccepted</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->[RECIPIENT_nameDef] seemed responsive to [INITIATOR_nameDef].</li>
        <li>sent->[RECIPIENT_nameDef] flirted back with [INITIATOR_nameDef].</li>
        <li>sent->[RECIPIENT_nameDef] smiled at [INITIATOR_nameDef]'s flirt.</li>
		<li>sent->[RECIPIENT_nameDef] returned [INITIATOR_nameDef]'s flirt.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>Sentence_FlirtAttemptRejectedNeutral</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->[RECIPIENT_nameDef] wasn't responsive.</li>
        <li>sent->[RECIPIENT_nameDef] didn't respond.</li>
        <li>sent->[RECIPIENT_nameDef] ignored [INITIATOR_nameDef].</li>
        <li>sent->[RECIPIENT_nameDef] gave a minimal response.</li>
        <li>sent->[RECIPIENT_nameDef] turned [INITIATOR_objective] down.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>
  
  <RulePackDef>
    <defName>Sentence_FlirtAttemptRejectedOffended</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->[RECIPIENT_nameDef] responded with irritation.</li>
        <li>sent->[RECIPIENT_nameDef] told [INITIATOR_nameDef] not to talk to [RECIPIENT_objective] again.</li>
        <li>sent->[RECIPIENT_nameDef] interrupted [INITIATOR_nameDef] abruptly and declared [RECIPIENT_objective] wasn't interested.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>
  
  <RulePackDef>
    <defName>Sentence_FlirtAttemptRejectedPolite</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->[RECIPIENT_nameDef] muttered something noncommittal.</li>
        <li>sent->[RECIPIENT_nameDef] politely said [RECIPIENT_pronoun] wasn't interested.</li>
        <li>sent->[RECIPIENT_nameDef] listened patiently but said nothing.</li>
		<li>sent->[RECIPIENT_nameDef] worded a very long, very complicated, very polite rejection.</li>
		<li>sent->[RECIPIENT_nameDef] pretended [RECIPIENT_pronoun] didn't understand.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>
  
  <RulePackDef>
    <defName>Sentence_FlirtAttemptOblivious</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->[RECIPIENT_nameDef] didn't understand what [INITIATOR_nameDef] was saying.</li>
		<li>sent->[RECIPIENT_nameDef] was oblivious.</li>
		<li>sent->It went over [RECIPIENT_nameDef]'s head.</li>
		<li>sent->[RECIPIENT_nameDef] responded politely, unaware of [INITIATOR_nameDef]'s attentions.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

